@model DatVeXemPhim.Models.Ghe

@{
    ViewData["Title"] = "Chỉnh Sửa";
}

<h1 class="text-center">Chỉnh sửa</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4>Ghế</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <div class="form-group">
                    <label asp-for="maPhong" class="control-label">Phòng Chiếu</label>
                    <select asp-for="maPhong" class="form-control" asp-items="ViewBag.PhongChieuList"></select>
                </div>
                <div class="form-group">
                    <label asp-for="tenGhe" class="control-label">Tên Ghế</label>
                    <input asp-for="tenGhe" class="form-control" />
                    <span asp-validation-for="tenGhe" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
