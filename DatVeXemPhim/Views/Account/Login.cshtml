@{
    ViewData["Title"] = "Login";
}

<style>
.contact {
    max-width: 500px;
    margin: 50px auto;
    padding: 20px;
    background-color: #f7f7f7;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #333;
    font-size: 24px;
    font-weight: 600;
}

.form-group {
    margin-bottom: 15px;
}

label {
    font-weight: 500;
    color: #333;
}

.form-control {
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
    font-size: 16px;
    width: 100%;
}

.form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

#RememberMe {
    margin-right: 10px;
}

button[type="submit"] {
    width: 100%;
    padding: 10px;
    font-size: 18px;
    border-radius: 5px;
    border: none;
    background-color: #007bff;
    color: #fff;
    transition: background-color 0.3s ease;
}

button[type="submit"]:hover {
    background-color: #0056b3;
}

.text-center {
    text-align: center;
    margin-top: 20px;
}

.text-center p {
    color: #333;
}

.text-center a {
    color: #007bff;
    text-decoration: none;
}

.text-center a:hover {
    text-decoration: underline;
}
</style>
<div class="contact">
    <h2>Đăng Nhập</h2>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label for="taiKhoan">Tài khoản</label>
            <input type="text" class="form-control" id="taiKhoan" name="taiKhoan" required>
        </div>
        <div class="form-group">
            <label for="matKhau">Mật khẩu</label>
            <input type="password" class="form-control" id="matKhau" name="matKhau" required>
        </div>
        <div class="form-group">
            <input type="checkbox" id="RememberMe" name="RememberMe">
            <label for="RememberMe">Nhớ mật khẩu</label>
        </div>
        <button type="submit" class="btn btn-primary">Đăng Nhập</button>
        <div class="text-center">
            <p>Bạn chưa có tài khoản? <a asp-controller="Account" asp-action="Register">Đăng ký</a></p>
        </div>
    </form>
</div>