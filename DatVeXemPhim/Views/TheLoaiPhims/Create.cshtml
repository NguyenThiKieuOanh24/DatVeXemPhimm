@model DatVeXemPhim.Models.TheLoaiPhim

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm</h1>

<h4>Thể Loại Phim</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="tenLoaiPhim" class="control-label"></label>
                <input asp-for="tenLoaiPhim" class="form-control" />
