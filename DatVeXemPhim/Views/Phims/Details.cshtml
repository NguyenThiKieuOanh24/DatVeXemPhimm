@model DatVeXemPhim.Models.Phim 

@{
    ViewData["Title"] = "Details";
}
<h1>Chi Tiết</h1>
<div>
    <h4>Phim</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.posterPhim)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.posterPhim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.tenPhim)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.tenPhim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.daoDien)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.daoDien)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dienVien)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dienVien)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.maLoaiPhim)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.maLoaiPhim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.thoiGianKhoiChieu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.thoiGianKhoiChieu)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.thoiLuong)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.thoiLuong)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ngonNgu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ngonNgu)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id">Chỉnh Sửa</a> |
    <a asp-action="Index">Trở Lại</a>
</div>
<h1>Nội dung phim</h1>
<div class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <img style="height: 350px" src="@Model.posterPhim" class="img-fluid" alt="@Model.tenPhim">
        </div>
        <div class="col-md-8">
            <h1>@Model.tenPhim</h1>
            <p>Đạo diễn: @Model.daoDien</p>
            <p>Diễn viên: @Model.dienVien</p>
            <p>Thể loại: @Html.DisplayFor(model => model.fk_TheLoaiPhim.tenLoaiPhim)</p>
            <p>Khởi chiếu: @Model.thoiGianKhoiChieu.ToString("dd/MM/yyyy")</p>
            <p>Thời lượng: @Model.thoiLuong.ToString()</p
            <div class="d-flex justify-content-between mt-4">
                <a style="padding: 10px" class="btn btn-primary">Mua vé</a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>