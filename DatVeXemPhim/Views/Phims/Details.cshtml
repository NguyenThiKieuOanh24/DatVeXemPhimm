@model DatVeXemPhim.Models.Phim
@{
    ViewData["Title"] = "Chi tiết";
}


<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">Nhân Viên</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Mã Phim
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.id)
                </dd>
                <dt class="col-sm-2">
                    Poster Phim
                </dt>
                <dd>
                    <img src="@Model.posterPhim" style="max-width:200px;" />
                </dd>
                <dt class="col-sm-2">
                    Tên Phim
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.tenPhim)
                </dd>
                <dt class="col-sm-2">
                    Đạo Diễn
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.daoDien)
                </dd>
                <dt class="col-sm-2">
                    Diễn Viên
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.dienVien)
                </dd>
                <dt class="col-sm-2">
                    Thể Loại Phim
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.maLoaiPhim)
                </dd>
                <dt class="col-sm-2">
                    Thời Gian Khởi Chiếu
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.thoiGianKhoiChieu)
                </dd>
                <dt class="col-sm-2">
                    Thời Lượng
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.thoiLuong)
                </dd>
                <dt class="col-sm-2">
                    Ngôn Ngữ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ngonNgu)
                </dd>
            </dl>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-primary">Chỉnh sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
