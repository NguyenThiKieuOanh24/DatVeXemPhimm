@model DatVeXemPhim.Models.Phim

@{
    ViewData["Title"] = "Xóa";
}
<h1 class="text-center">Xoá</h1>
<p class="text-danger text-center">@ViewData["ErrorMessage"]</p>
<h3 class="text-center">Bạn có chắc chắn muốn xoá phim "@Html.DisplayFor(model => model.tenPhim)" không?</h3>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h4 class="mt-4">Phim</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Mã Phim
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.id)
                </dd>
                <dt class="col-sm-2">
                    Poster Phim
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.posterPhim)
                </dd>
                <dt class="col-sm-2">
                    Tên Phim
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.tenPhim)
                </dd>
                <dt class="col-sm-2">
                    Đạo Diễn
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.daoDien)
                </dd>
                <dt class="col-sm-2">
                    Diễn Viên
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.dienVien)
                </dd>
                <dt class="col-sm-2">
                    Thể Loại Phim
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.maLoaiPhim)
                </dd>
                <dt class="col-sm-2">
                    Thời Gian Khỏi Chiếu
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.thoiGianKhoiChieu)
                </dd>
                <dt class="col-sm-2">
                    Thời Lượng
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.thoiLuong)
                </dd>
                <dt class="col-sm-2">
                    Ngôn Ngữ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ngonNgu)
                </dd>
            </dl>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="id" />
                <button type="submit" class="btn btn-danger mr-2">Xoá</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </form>
        </div>
    </div>
</div>
