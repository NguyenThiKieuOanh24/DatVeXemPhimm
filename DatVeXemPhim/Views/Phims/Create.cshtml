@model DatVeXemPhim.Models.Phim

@{
    ViewData["Title"] = "Thêm Phim";
}
<h1 class="text-center display-4">Thêm Phim</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 shadow p-4 rounded">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="posterPhim" class="control-label">Poster Phim</label>
                    <input asp-for="posterPhim" class="form-control" />
                    <span asp-validation-for="posterPhim" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="tenPhim" class="control-label">Tên Phim</label>
                    <input asp-for="tenPhim" class="form-control" />
                    <span asp-validation-for="tenPhim" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="daoDien" class="control-label">Đạo Diễn</label>
                    <input asp-for="daoDien" class="form-control" />
                    <span asp-validation-for="daoDien" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="dienVien" class="control-label">Diễn Viên</label>
                    <input asp-for="dienVien" class="form-control" />
                    <span asp-validation-for="dienVien" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="maLoaiPhim" class="control-label">Thể Loaị Phim</label>
                    <select asp-for="maLoaiPhim" class="form-control" asp-items="ViewBag.TheLoaiPhimList"></select>
                </div>
                <div class="form-group">
                    <label asp-for="thoiGianKhoiChieu" class="control-label">Thời Gian Khởi Chiếu</label>
                    <input asp-for="thoiGianKhoiChieu" class="form-control" />
                    <span asp-validation-for="thoiGianKhoiChieu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="thoiLuong" class="control-label">Thời Lượng</label>
                    <input asp-for="thoiLuong" class="form-control" />
                    <span asp-validation-for="thoiLuong" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ngonNgu" class="control-label">Ngôn Ngữ</label>
                    <input asp-for="ngonNgu" class="form-control" />
                    <span asp-validation-for="ngonNgu" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary">Tạo mới</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
