@model IEnumerable<DatVeXemPhim.Models.Phim>
@{
    ViewData["Title"] = "Phim Sắp Chiếu";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/phim.css" rel="stylesheet" />
</head>
<body>
    <h1 style="margin-top: 20px">Phim Sắp Chiếu - Không nên bỏ lỡ</h1>
    <div class="row">
        @foreach (var phim in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@phim.posterPhim" class="card-img-top" alt="@phim.tenPhim">
                    <div class="card-body">
                        <h5 class="card-title">@phim.tenPhim</h5>
                        <p class="card-text">Đạo diễn: @phim.daoDien</p>
                        <p class="text-muted">Diễn viên: @phim.dienVien</p>          
                        <p class="text-muted">Khởi chiếu: @phim.thoiGianKhoiChieu.ToShortDateString()</p>
                        <a asp-controller="Phims" asp-action="Details" asp-route-id="@phim.id">
                            <button class="btn btn-warning">Xem chi tiết</button>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Add any JavaScript code here if needed
        });
    </script>
</body>
</html>
