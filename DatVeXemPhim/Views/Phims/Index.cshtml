@model phanTrang<DatVeXemPhim.Models.Phim>
@{
    ViewData["Title"] = "Quản Lý Phim";
    Layout = "_Layout_Admin";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-primary">Thêm Phim</a>
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group mb-3">
        <input type="text" name="SearchString" class="form-control" placeholder="Tìm Phim" value="@ViewData["CurrentFilter"]" />
        <button class="btn btn-secondary" type="submit">Tìm kiếm</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Xem toàn bộ danh sách</a>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    Poster Phim
                </th>
                <th>
                    Tên Phim
                </th>
                <th>
                    Đạo Diễn
                </th>
                <th>
                    Diễn Viên
                </th>
                <th>
                    Thể Loại Phim
                </th>
                <th>
                    Thời Gian Khởi Chiếu
                </th>
                <th>
                    Thời Lượng
                </th>
                <th>
                    Ngôn Ngữ
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content(item.posterPhim)" style="max-width:200px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tenPhim)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.daoDien)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dienVien)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.maLoaiPhim)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.thoiGianKhoiChieu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.thoiLuong)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ngonNgu)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                        <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info btn-sm">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">Xoá</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
            <a class="page-link" asp-action="Index"
               asp-route-pageNumber="@(Model.soTrang - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]">Trước</a>
        </li>
        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
            <a class="page-link" asp-action="Index"
               asp-route-pageNumber="@(Model.soTrang + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]">Sau</a>
        </li>
    </ul>
</nav>
</div>
