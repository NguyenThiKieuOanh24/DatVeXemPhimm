@model phanTrang<DatVeXemPhim.Models.NhanVien>
@{
    ViewData["Title"] = "Quản Lý Nhân Viên";
    Layout = "_Layout_Admin";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-primary">Thêm Nhân Viên</a>
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group mb-3">
        <input type="text" name="SearchString" class="form-control" placeholder="Tìm Nhân Viên" value="@ViewData["CurrentFilter"]" />
        <button class="btn btn-secondary" type="submit">Tìm kiếm</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Xem toàn bộ danh sách</a>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    Mã Nhân Viên
                </th>
                <th>
                    Họ Tên
                </th>
                <th>
                    Địa Chỉ
                </th>
                <th>
                    Số Điện Thoại
                </th>
                <th>
                    Email
                </th>
                <th>
                    Ngày Sinh
                </th>
                <th>
                    Giới Tính
                </th>
                <th>
                    Tài Khoản
                </th>
                <th>
                    Mật Khẩu
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.hoTen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.diaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.soDienThoai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ngaySinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.gioiTinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.taiKhoan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.matKhau)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                        <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info btn-sm">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">Xoá</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
            <a class="page-link" asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.soTrang - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]">Trước</a>
        </li>
        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
            <a class="page-link" asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.soTrang + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]">Sau</a>
        </li>
    </ul>
</nav>
</div>
