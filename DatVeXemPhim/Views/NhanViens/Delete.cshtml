@model DatVeXemPhim.Models.NhanVien

@{
    ViewData["Title"] = "Xóa";
}
<h1 class="text-center">Xoá</h1>
<p class="text-danger text-center">@ViewData["ErrorMessage"]</p>
<h3 class="text-center">Bạn có chắc chắn muốn xoá nhân viên "@Html.DisplayFor(model => model.hoTen)" không?</h3>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h4 class="mt-4">Nhân Viên</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Mã Nhân Viên
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.id)
                </dd>
                <dt class="col-sm-2">
                    Họ Tên
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.hoTen)
                </dd>
                <dt class="col-sm-2">
                    Địa Chỉ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.diaChi)
                </dd>
                <dt class="col-sm-2">
                    Số Điện Thoại
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.soDienThoai)
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.email)
                </dd>
                <dt class="col-sm-2">
                    Ngày Sinh
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ngaySinh)
                </dd>
                <dt class="col-sm-2">
                    Giới Tính
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.gioiTinh)
                </dd>
                <dt class="col-sm-2">
                    Tài Khoản
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.taiKhoan)
                </dd>
                <dt class="col-sm-2">
                    Mật Khẩu
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.matKhau)
                </dd>
            </dl>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="id" />
                <button type="submit" class="btn btn-danger mr-2">Xoá</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </form>
        </div>
    </div>
</div>
