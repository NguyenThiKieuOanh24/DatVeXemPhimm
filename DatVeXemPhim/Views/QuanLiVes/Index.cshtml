@model phanTrang<DatVeXemPhim.Models.Ve>

@{
    ViewData["Title"] = "Quản lí vé";
    Layout = "_Layout_Admin";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Thêm vé</a>
        <a asp-controller="QuanLiVes" asp-action="DangKy" class="btn btn-success">Đặt vé</a>
    </p>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group mb-3">
            <input type="text" name="searchCodeXC" class="form-control" placeholder="Mã xuất chiếu" value="@ViewData["CurrentCodeXC"]" />
            <button class="btn btn-secondary" type="submit">Tìm theo mã xuất chiếu</button>
            <input type="text" name="searchCodeKH" class="form-control ms-2" placeholder="Mã khách hàng" value="@ViewData["CurrentCodeKH"]" />
            <button class="btn btn-secondary ms-2" type="submit">Tìm theo mã khách hàng</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Xem toàn bộ danh sách vé</a>
        </div>
        <a class="btn btn-primary" href="/QuanLiVes/ExportToExcel">Xuất Excel</a>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Mã xuất chiếu</th>
                    <th>Mã khách hàng</th>
                    <th>Mã nhân viên</th>
                    <th>Mã ghế</th>
                    <th>Ngày bán vé</th>
                    <th>Tổng tiền</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.fk_XuatChieu.id)</td>
                        <td>@Html.DisplayFor(modelItem => item.fk_KhachHang.id)</td>
                        <td>@Html.DisplayFor(modelItem => item.fk_NhanVien.id)</td>
                        <td>@Html.DisplayFor(modelItem => item.fk_MaGhe.id)</td>
                        <td>@Html.DisplayFor(modelItem => item.ngayBanVe)</td>
                        <td>@Html.DisplayFor(modelItem => item.tongTien)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-info">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger">Xoá</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.soTrang - 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]">Trước</a>
            </li>
            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.soTrang + 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]">Sau</a>
            </li>
        </ul>
    </nav>
</div>
