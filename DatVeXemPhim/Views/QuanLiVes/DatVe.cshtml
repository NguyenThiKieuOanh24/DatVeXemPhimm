@model DatVeXemPhim.Models.Ve

@{
    ViewData["Title"] = "Đặt vé";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="container">
    <h4>Chọn thông tin vé</h4>
    <form asp-action="DatVe" method="post">
        <div class="form-group">
            <label>ID Khách Hàng</label>
            <input type="text" class="form-control" value="@ViewBag.KhachHangID" readonly />
            <input type="hidden" asp-for="maKhachHang" value="@ViewBag.KhachHangID" />
        </div>
        <div class="form-group">
            <label asp-for="maXuatChieu" class="control-label">Chọn xuất chiếu</label>
            <select asp-for="maXuatChieu" class="form-control" asp-items="ViewBag.XuatChieus"></select>
        </div>
        <div class="form-group">
            <label asp-for="maGhe" class="control-label">Chọn Ghế</label>
            <select asp-for="maGhe" class="form-control" asp-items="ViewBag.Ghes"></select>
        </div>
        <div class="form-group">
            <label for="maNhanVien">Nhân Viên đặt vé</label>
            <select id="maNhanVien" name="maNhanVien" class="form-control" asp-items="ViewBag.NhanViens"></select>
        </div>
        <div class="form-group">
            <label asp-for="tongTien" class="control-label">Tổng tiền</label>
            <input asp-for="tongTien" class="form-control" value="45" readonly />
        </div>
        <div class="form-group">
            <input type="submit" value="Đặt vé" class="btn btn-primary" />
        </div>
    </form>
</div>
