@model DatVeXemPhim.Models.Ve

@{
    ViewData["Title"] = "Thêm thông tin vé";
}

<div class="container mt-4">
    <h1 class="text-center display-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6 shadow p-4 rounded bg-white">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="maXuatChieu" class="form-label">Mã xuất chiếu</label>
                    <select asp-for="maXuatChieu" class="form-control" asp-items="ViewBag.maXuatChieu"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="maKhachHang" class="form-label">Tên khách hàng</label>
                    <select asp-for="maKhachHang" class="form-control" asp-items="ViewBag.maKhachHang"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="maNhanVien" class="form-label">Tên nhân viên</label>
                    <select asp-for="maNhanVien" class="form-control" asp-items="ViewBag.maNhanVien"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="maGhe" class="form-label">Tên ghế</label>
                    <select asp-for="maGhe" class="form-control" asp-items="ViewBag.maGhe"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ngayBanVe" class="form-label">Ngày bán vé</label>
                    <input asp-for="ngayBanVe" class="form-control" />
                    <span asp-validation-for="ngayBanVe" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="tongTien" class="form-label">Tổng tiền</label>
                    <input asp-for="tongTien" class="form-control" />
                    <span asp-validation-for="tongTien" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-end mt-4">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
