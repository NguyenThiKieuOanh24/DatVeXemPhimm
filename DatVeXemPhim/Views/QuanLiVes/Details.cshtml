@model DatVeXemPhim.Models.Ve

@{
    ViewData["Title"] = "Chi tiết thông tin vé";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">Vé</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Mã vé</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.id)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.fk_XuatChieu)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.fk_XuatChieu.id)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.fk_KhachHang)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.fk_KhachHang.id)</dd>
                <dt class="col-sm-2">Tên khách hàng</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.fk_KhachHang.hoTen)</dd>
                <dt class="col-sm-2">Tên phim</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.fk_XuatChieu.fk_Phim.tenPhim)</dd>
                <dt class="col-sm-2">Ngày chiếu</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.fk_XuatChieu.ngayChieu)</dd>
                <dt class="col-sm-2">Tên phòng</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.fk_XuatChieu.fk_PhongChieu.tenPhong)</dd>
                <dt class="col-sm-2">Tên ghế</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.fk_MaGhe.tenGhe)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ngayBanVe)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ngayBanVe)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.tongTien)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.tongTien)</dd>
            </dl>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
