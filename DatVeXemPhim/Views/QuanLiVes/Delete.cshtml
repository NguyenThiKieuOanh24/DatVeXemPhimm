@model DatVeXemPhim.Models.Ve

@{
    ViewData["Title"] = "Xoá vé";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">Ve</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.fk_XuatChieu)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.fk_XuatChieu.id)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.fk_KhachHang)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.fk_KhachHang.email)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.fk_NhanVien)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.fk_NhanVien.id)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.fk_MaGhe)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.fk_MaGhe.id)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ngayBanVe)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ngayBanVe)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.tongTien)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.tongTien)</dd>
            </dl>
        </div>
    </div>
    <div class="text-center mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="id" />
            <input type="submit" value="Xoá" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>
