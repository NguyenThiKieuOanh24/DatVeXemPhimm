@model DatVeXemPhim.Models.PhongChieu

@{
    ViewData["Title"] = "Chi tiết";
}


<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">Phòng Chiếu</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Mã Phòng Chiếu</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.id)</dd>
                <dt class="col-sm-3">Tên Phòng Chiếu</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.tenPhong)</dd>
            </dl>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-primary">Chỉnh sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
