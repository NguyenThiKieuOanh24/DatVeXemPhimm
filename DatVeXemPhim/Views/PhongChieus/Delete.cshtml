@model DatVeXemPhim.Models.PhongChieu

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Xoá</h1>
<p class="text-danger text-center">@ViewData["ErrorMessage"]</p>
<h3 class="text-center">Bạn có chắc chắn muốn xoá thể loại "@Html.DisplayFor(model => model.tenPhong)" không?</h3>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h4 class="mt-4">Phòng Chiếu</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.tenPhong)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.tenPhong)
                </dd>
            </dl>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="id" />
                <button type="submit" class="btn btn-danger mr-2">Xoá</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </form>
        </div>
    </div>
</div>
