@model DatVeXemPhim.Models.Ve

@{
    ViewData["Title"] = "Đặt vé";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-5">
        <h1 class="text-white">@ViewData["Title"]</h1>

        <h4 class="text-white">Chọn thông tin vé</h4>
        <form asp-action="Step2" method="post">
            <div class="form-group">
                <label asp-for="maXuatChieu" class="control-label text-white">Chọn xuất chiếu</label>
                <select asp-for="maXuatChieu" class="form-control" asp-items="ViewBag.UpcomingShowtimes"></select>
            </div>
            <div class="form-group">
                <label asp-for="maGhe" class="control-label text-white">Chọn Ghế</label>
                <select asp-for="maGhe" class="form-control" asp-items="ViewBag.Ghes"></select>
            </div>
            <div class="form-group">
                <label asp-for="tongTien" class="control-label text-white">Giá vé: 45.000 VND</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Đặt vé" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-7">
        <img src="https://i.imgur.com/QTk80hV.png" class="img-fluid" alt="Ảnh Ghế" />
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var khachHangID = @ViewBag.KhachHangID;
            if (khachHangID == null || khachHangID === '') {
                window.location.href = '/Account/Login'; // Thay đổi đường dẫn tới trang đăng nhập của bạn nếu cần
            }
        });
    </script>
}
