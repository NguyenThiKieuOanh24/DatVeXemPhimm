@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DatVeXemPhim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="shortcut icon" href="~/lib/favicon.ico" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <header id="header" class="d-flex align-items-center">
    </header>
            <nav id="navbar" class="navbar" style="align-items:center">
                <ul>
                    <li>
                <a class="nav-link scrollto active" asp-controller="Admin" asp-action="Index" style="align-items:center">Trang chủ</a>
                    </li>
                    <li>
                <a class="nav-link scrollto active" asp-controller="Admin" asp-action="LogOut" style="align-items:center">Đăng xuất</a>
            </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
        <div class="row">
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="QuanLiKhachHangs" asp-action="Index">Quản lí khách hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="QuanLiXuatChieus" asp-action="Index"> Quản lí xuất chiếu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="QuanLiVes" asp-action="Index"> Quản lí vé</a>
                        </li>
                        <li class ="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Phims" asp-action="Index">Quản Lí Phim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="TheLoaiPhims" asp-action="Index">Quản Lí Thể Loại</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="PhongChieus" asp-action="Index">Quản Lí Phòng Chiếu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link scrollto" asp-area="" asp-controller="Ghes" asp-action="Index">Quản Lí Ghế</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link scrollto" asp-area="" asp-controller="NhanViens" asp-action="Index">Quản Lí Nhân Viên</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
