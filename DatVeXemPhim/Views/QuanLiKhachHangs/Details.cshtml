                    <th>Ngày bán vé</th>
                    <th>Tổng tiền (đv: nghìn đồng)</th>
                </tr>
                @foreach (var item in Model.Ves)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.fk_XuatChieu.id)     
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fk_XuatChieu.fk_Phim.tenPhim)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fk_MaGhe.tenGhe)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fk_XuatChieu.gioBatDau)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fk_XuatChieu.gioKetThuc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ngayBanVe)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tongTien)
                        </td>
                    </tr>
                }
            </table>
