@model DatVeXemPhim.Models.Phim


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Model.tenPhim</title>
    <style>
        /* Global styles */
      

        .container h1 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 20px;
            color: #fff;
        }

        .img-fluid {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            height:100x;
            width: 100%;
            object-fit: cover;
        }

        .movie-details {
            color: #fff;
        }

        .movie-details h1 {
            color: #ffcc00;

        }

        .movie-details p {
            font-size: 1.1rem;
            line-height: 1.5;
            margin-bottom: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        .d-flex {
            align-items: center;
        }

    </style>
</head>
<body>
    <div class="container my-5">
        <h1>Nội dung phim</h1>
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.posterPhim" class="img-fluid" alt="@Model.tenPhim">
            </div>
            <div class="col-md-8 movie-details">
                <h1>@Model.tenPhim</h1>
                <p>Đạo diễn: @Model.daoDien</p>
                <p>Diễn viên: @Model.dienVien</p>
                <p>Thể loại: @Model.fk_TheLoaiPhim.tenLoaiPhim</p>
                <p>Khởi chiếu: @Model.thoiGianKhoiChieu.ToString("dd/MM/yyyy")</p>
                <p>Thời lượng: @Model.thoiLuong</p>
                <p>Ngôn ngữ: @Model.ngonNgu</p>
                <div class="d-flex justify-content-between mt-4">
                    <a href="#" class="btn btn-primary">Mua vé</a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
