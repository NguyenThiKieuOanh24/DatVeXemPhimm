@model DatVeXemPhim.Models.Phim

<style>
.container {
    margin: 0 auto;
}

.container h1 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 20px;
    color: black;
}

.img-fluid {
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    height: 400px;
}

.movie-details p {
    font-size: 1.1rem;
    line-height: 1.5;
    color: white;
}

.movie-details h1 {
    color: yellow;
}

.btn-primary {
    background-color: #007bff;
    border: none;
    padding: 10px 20px;
    font-size: 1rem;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #0056b3;
}

.btn-secondary {
    background-color: #6c757d;
    border: none;
    padding: 10px 20px;
    font-size: 1rem;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.btn-secondary:hover {
    background-color: #5a6268;
}

.d-flex {
    align-items: center;
}
</style>

<h1>Nội dung phim</h1>
<div class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.posterPhim" class="img-fluid" alt="@Model.tenPhim">
        </div>
        <div class="col-md-8 movie-details">
            <h1>@Model.tenPhim</h1>
            <p>Đạo diễn: @Model.daoDien</p>
            <p>Diễn viên: @Model.dienVien</p>
            <p>Thể loại: @Html.DisplayFor(model => model.fk_TheLoaiPhim.tenLoaiPhim)</p>
            <p>Khởi chiếu: @Model.thoiGianKhoiChieu.ToString("dd/MM/yyyy")</p>
            <p>Thời lượng: @Model.thoiLuong.ToString()</p>
            <div class="d-flex justify-content-between mt-4">
                <a style="padding: 10px" class="btn btn-primary">Mua vé</a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>
