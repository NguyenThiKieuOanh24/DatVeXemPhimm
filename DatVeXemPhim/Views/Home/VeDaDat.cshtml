@model IEnumerable<DatVeXemPhim.Models.Ve>
@if (Model == null)
{
    <h1>Danh sách trống</h1>
}
else
{
    <div class="container mt-4">
        <h1 class="text-center mb-4">@ViewData["Vé đã đặt"]</h1>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Mã vé</th>
                        <th>Tên phim</th>
                        <th>Giờ chiếu</th>
                        <th>Ghế</th>
                        <th>Phòng</th>
                        <th>Giá</th>
                        <th>Thời gian đặt</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@Html.DisplayFor(modelItem => item.fk_XuatChieu.fk_Phim.tenPhim)</td>
                            <td>@Html.DisplayFor(modelItem => item.fk_XuatChieu.ngayChieu)</td>
                            <td>@Html.DisplayFor(modelItem => item.fk_MaGhe.tenGhe)</td>
                            <td>@Html.DisplayFor(modelItem => item.fk_MaGhe.fk_PhongChieu.tenPhong)</td>
                            <td>@Html.DisplayFor(modelItem => item.tongTien)</td>
                            <td>@Html.DisplayFor(modelItem => item.ngayBanVe)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}


